---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'NDEXPLORER ‚Äî NextDNS Log Explorer' } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üîç</text></svg>" />
  </head>
  <body>
    <slot />

    <!-- Toast container -->
    <div id="toast-container" class="fixed top-4 right-4 z-50 flex flex-col gap-2 pointer-events-none"></div>

    <!-- Scroll nav buttons -->
    <div class="fixed bottom-6 right-6 z-40 flex flex-col gap-2">
      <button
        id="scroll-top-btn"
        class="w-10 h-10 rounded-full flex items-center justify-center transition-all duration-300 opacity-0 pointer-events-none cursor-pointer"
        style="background-color: var(--bg-tertiary); border: 1px solid var(--border);"
        aria-label="Scroll to top"
        data-i18n-aria="scroll.top"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="18 15 12 9 6 15"></polyline>
        </svg>
      </button>
      <button
        id="scroll-bottom-btn"
        class="w-10 h-10 rounded-full flex items-center justify-center transition-all duration-300 opacity-0 pointer-events-none cursor-pointer"
        style="background-color: var(--bg-tertiary); border: 1px solid var(--border);"
        aria-label="Scroll to bottom"
        data-i18n-aria="scroll.bottom"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </button>
    </div>

    <script src="../i18n/translations.js"></script>
    <script src="../scripts/app.js"></script>
  </body>
</html>
